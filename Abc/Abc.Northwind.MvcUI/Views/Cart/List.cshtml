@model Abc.Northwind.MvcUI.Models.CartSummaryViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/_Layout.cshtml";
}
    <div class="col-md-8 order-md-2 mb-4" style="margin-top:75px; margin-left:auto">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Your cart</span>
            <span class="badge badge-secondary badge-pill">@Model.Cart.Total</span>
        </h4>
        <ul class="list-group mb-3">
            @foreach (var item in Model.Cart.CartLines)
            {
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">@item.product.ProductName</h6>

                        <small class="text-muted">@item.Quantity</small>
                        <a style="margin-left:550px" class="btn btn-xs btn-warning" asp-controller="Cart" asp-action="QuantityDescent" asp-route-productId="@item.product.ProductId"><span> - </span></a>
                        <a class="btn btn-xs btn-success" asp-controller="Cart" asp-action="QuantityIncrese" asp-route-productId="@item.product.ProductId"><span> + </span></a>
                        <a class="btn btn-xs btn-danger" style="margin-left:220px;" asp-controller="Cart"
                           asp-action="Remove" asp-route-productId="@item.product.ProductId"><span><small>Remove from cart</small></span></a>

                    </div>
                    <span class="text-muted">@item.product.UnitPrice<small></small></span>
                </li>
            }
            <li class="list-group-item d-flex justify-content-between">

                <strong>Total : @Model.Cart.Total</strong><span>Total (USD)</span>
            </li>
        </ul>       
        <a asp-controller="Product" asp-action="Index" class="btn btn-xs btn-default btn-primary">
            Continue Shopping
        </a>
        <a style="margin-left:800px" asp-controller="Cart" asp-action="Complete" class="btn btn-xs btn-info">
            Go To Checkout
        </a>

    </div>