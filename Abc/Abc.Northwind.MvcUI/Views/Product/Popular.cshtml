@model Abc.Northwind.MvcUI.Models.ProductPopularViewModel
@{
    Layout = "~/Views/_Layout.cshtml";
}

<style>
    .card {
        width: 1735px;
        height: 700px;
    }


    .card-img-top {
        width: 100%;
        height: 100%;
    }

    .row {
        margin-top: 50px;
    }
</style> <div class="row">
    @foreach (var item in Model.Products)
    {



        <div class="col-md-7" style="margin-top:10px;">
            <h2 class="featurette-heading">@item.ProductName <span class="text-muted">@item.UnitPrice</span></h2>
            <p class="lead">@item.UnitsInStock Donec ullamcorper nulla non metus auctor fringilla. Vestibulum id ligula porta felis euismod semper. Praesent commodo cursus magna, vel scelerisque nisl consectetur. Fusce dapibus, tellus ac cursus commodo.</p>
        </div>
        <div class="col-md-5" style="margin-top:10px;">
            <img src="https://as2.ftcdn.net/jpg/00/67/59/93/500_F_67599374_q2UqPO9kpImjN3vemdiSRtv0KHMnrG4Y.jpg" />
        </div>

        <hr class="featurette-divider">

    }

</div>
