@model Abc.Northwind.MvcUI.Models.ProductFilterViewModel

@{
    Layout = "~/Views/_Layout.cshtml";
}
<h2 style="margin-top:75px;">Products listed by minimum price</h2>
<table style="margin-top:10px;" class="table table-hover ">
    <tr>
        <td>Product Name</td>
        <td>Uni Price</td>
        <td>Units in stock</td>
        <td>Product Id</td>
    </tr>
    @foreach (var product in Model.MinProducts)
    {
        <tr>
            <td>@product.ProductName</td>
            <td>@product.UnitPrice</td>
            <td>@product.UnitsInStock</td>
            <td><a class="btn btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId">Add To Cart</a></td>

        </tr>
    }

</table>

