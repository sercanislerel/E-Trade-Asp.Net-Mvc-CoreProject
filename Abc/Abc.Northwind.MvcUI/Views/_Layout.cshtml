<!DOCTYPE html>
@*/*o mvc latouy bekledi biz razor layout */*@
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/bootstrap.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/jquery.validationEngine.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <script src="~/lib/AlertifyJS/alertify.min.js"></script>
    <link href="~/lib/AlertifyJS/css/alertify.min.css" rel="stylesheet" />



    <style>



        .feather {
            width: 16px;
            height: 16px;
            vertical-align: text-bottom;
        }

        .main {
            top: 20px;
        }

        .sidebar {
            top: 20px;
            bottom: 0;
            left: 0;
            z-index: 100; 
            padding: 48px 0 0;
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
        }


        .sidebar-sticky {
            position: relative;
            top: 20px;
            height: calc(100vh - 48px);
            padding-top: .5rem;
            overflow-x: hidden;
            overflow-y: auto; 
        }



        .sidebar .nav-link {
            font-weight: 500;
            color: #333;
        }

            .sidebar .nav-link .feather {
                margin-right: 4px;
                color: #999;
            }

            .sidebar .nav-link.active {
                color: #007bff;
            }

                .sidebar .nav-link:hover .feather,
                .sidebar .nav-link.active .feather {
                    color: inherit;
                }
/*
      
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-light shadow p-3 mb-4 bg-white rounded fixed-top ">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item ">
                    <i class="fa fa-asl-interpreting" style="font-size:36px"> </i>
                </li>
                <li class="nav-item ">
                    <a class="nav-link text-danger" asp-controller="Product" asp-action="Index"><h5>Northwind</h5> <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-warning" asp-controller="Product" asp-action="Popular"><h5>Populer Products</h5></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-success" asp-controller="Product" asp-action="Filters"> <h5>Filters</h5></a>
                </li>
                <li class="nav-item">
                    <i class="fa fa-search"></i>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-info" asp-controller="Account" asp-action="Login"><h5>Admin</h5></a>
                </li>


            </ul>
            <div class="nav-item dropdown dropleft  bg-light rounded">
                <a class="nav-link dropdown-toggle rounded  btn my-2 my-sm-0 btn-lg" style="color:Tomato;" id="Cart" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fa fa-shopping-cart" style="font-size:24px;"></i>
                </a>
                
                <div class="dropdown-menu bg-warning" aria-labelledby="navbarDropdown">
                    @await Component.InvokeAsync("CartSummary")

                </div>
            </div>
           
        </div>
    </nav>

    <div class="container-fluid ">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse" style=" background-color: rgb(213, 255, 0)">
                <div class="sidebar-sticky pt-2 ">
                    <ul class="nav flex-column">
                        <li class="nav-item"> <a class="nav-link" asp-controller="Product" asp-action="Index"><h5>All Products</h5></a> <hr class="solid"> </li>
                        @await Component.InvokeAsync("CategoryList")
                    </ul>
                </div>
            </nav>

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4 mt-4">
                @RenderSection("CaruselSection", false)
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-danger"><strong>@TempData["message"]</strong> </div>
                }
                @RenderBody()
            </main>
        </div>
    </div>

</body>
</html>
