@model Abc.Northwind.MvcUI.Models.CreateRoleViewModel


@{
    ViewBag.Title = "Creat Role";
    Layout = "~/Views/_AdminLayout.cshtml";
}


<div style="margin-top:20px;" class="container">
    <h2 >Create a New Role </h2>
   
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.RoleName"></label>
                <input asp-for="@Model.RoleName" class="form-control" />
                <span asp-validation-for="RoleName"></span>
            </div>
            <button type="submit" class="btn btn-info float-right">Create Role</button>
        </form>
   
</div>